<div class="fondoProducto">
	<br>
	<br>
	<br>
	<div class="container producto" align="left">
		<br>
		<h2><%= @product.name %></h2>
		<% if @product.default_image %>
		  <%= image_tag @product.default_image.path, :width => '200px', :style => "float:right" %>
		<% end %>
		<h3>Descripcion</h3>
		<p><%= @product.short_description %></p>
		<p>
		  <b><%=number_to_currency @product.price %> pesos</b>
		  <%= button_to "Agregar al carrito", product_path(@product.permalink),:class=>'btn btn-xs catalogo', :method => :post %>
		</p>

		<hr>
		<h3>Descripcion detallada</h3>
		<%= simple_format @product.description %>
		<%= button_to " Volver a la lista",root_path,class: 'btn btn-xs catalogo' %>
		<hr>
	</div>
</div>		
<%=render 'layouts/footer' %>